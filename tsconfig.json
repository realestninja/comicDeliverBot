{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "removeComments": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "index.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules",
    "dist"
  ]
}
